body 
    nav.navbar.navbar-expand-lg.navbar-light(style='background-color:#f050bb ')
        .container-lg
        a.navbar-brand(href='/') Forum XSS
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            form.d-flex.m-auto.mt-2
                input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
                button.btn.btn-outline-success(type='submit') Search
            if user 
                .navbar-nav.ms-auto.mb-lg-0
                    #{user.email}
                button.btn.btn-info Logout
            else 
                ul.navbar-nav.ms-auto.mb-2.mb-lg-0
                    li.nav-item
                        a.nav-link.active(aria-current='page', href='/login') Login
                    li.nav-item
                        a.nav-link(href='/register') Register
block content